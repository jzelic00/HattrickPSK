
@model HattrickPSK.Models.User

@{
    ViewBag.Title = "Login";
    Layout = null;
}

@*Sending user info to server*@
@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    <fieldset>
        <legend>HattrickPSK login</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }

        <table>
            <tr>
                <td>@Html.LabelFor(a => a.Username)</td>
                <td>@Html.TextBoxFor(a => a.Username) </td>
                <td>@Html.ValidationMessageFor(a => a.Username)</td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(a => a.Password)
                </td>
                <td>
                    @Html.PasswordFor(a => a.Password) 
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.Password)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Login" />
                </td>
                @*Redirection to forget password form*@
                <td>
                    <input type="button" value="Forget Password?"  onclick="window.location.assign('/Login/Forgottenpassword')"/>
                </td>
                @*Redirection to registration form*@
                <td>
                    <input type="button"     value="Registration" onclick="window.location.assign('/Registration/index')"/>
                </td>
                <td></td>

            </tr>
        </table>
    </fieldset>
}
