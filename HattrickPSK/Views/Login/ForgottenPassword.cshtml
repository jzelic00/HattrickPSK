@model HattrickPSK.Models.User
@{
    ViewBag.Title = "Forgot password?";
    Layout = null;
}

@using (Html.BeginForm("ForgottenPassword", "Login", FormMethod.Post))
{
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <div class="contrainer">
    <legend>Enter mail to send password</legend>

    <div class="col-md-3 center-block">
        <table class="table table-striped table-dark">
            <tr>
                <td>@Html.LabelFor(a => a.Email)</td>
                <td>@Html.TextBoxFor(a => a.Email)</td>
                <td>@Html.ValidationMessageFor(a => a.Email)</td>
            </tr>
        </table>

        <input type="button" class="btn btn-primary" value="Send"/>
        <input type="button" class="btn btn-secondary" value="Back to login" onclick="window.location.assign('/Login/index')"/>
       
    </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
}